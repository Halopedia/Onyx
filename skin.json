{
	"name": "Onyx",
	"author": [
		"Daniel Beard",
		"Jack Phoenix"
	],
	"url": "https://www.halopedia.org/Halopedia:Skins/Onyx",
	"license-name": "GPL-2.0-or-later",
	"type": "skin",
	"version": "0.7.5 (Beta)",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},

	"namemsg": "onyx-skin-name",
	"descriptionmsg": "onyx-skin-desc",

	"ValidSkinNames": {
		"onyx": {
			"displayname": "Onyx",
			"class": "SkinOnyx",
			"args": [ {
				"name": "onyx",
				"bodyOnly": true,
				"responsive": true,
				"scripts": [
					"skins.onyx.js"
				],
				"styles": [
					"skins.onyx.styles"
				]
			} ]
		}
	},

	"AutoloadClasses": {
		"SkinOnyx": "includes/SkinOnyx.php",
		"OnyxTemplate": "includes/OnyxTemplate.php",
		"Onyx\\Icon": "includes/Icon.php",
		"Onyx\\Config": "includes/Config.php",
		"Onyx\\ExtraSkinData": "includes/ExtraSkinData.php"
	},

	"MessagesDirs": {
		"Onyx": "i18n"
	},

	"ResourceModules": {
		"skins.onyx.styles.future": {
			"class": "ResourceLoaderSkinModule",
			"features": {
				"content-links": true,
				"content-thumbnails": true,
				"interface-message-box": true,
				"interface-category": true,
				"content-tables": true,
				"i18n-ordered-lists": true,
				"i18n-all-lists-margins": true,
				"i18n-headings": true,
				"elements": true,
				"interface": true,
				"logo": true
			}
		},
		"skins.onyx.styles": {
			"class": "ResourceLoaderSkinModule",
			"styles": {
				"resources/onyx-screen.css": {
					"media": "screen"
				},
				"resources/onyx-print.css": {
					"media": "print"
				}
			}
		},

		"skins.onyx.js": {
			"scripts": [
				"resources/onyx.js"
			],
			"dependencies": [
				"mediawiki.cookie"
			]
		}
	},

	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteSkinPath": "Onyx"
	},
	"ResourceModuleSkinStyles": {
		"onyx": {
			"+ext.socialprofile.userstats.css": "resources/skinStyles/ext.socialprofile.userstats.css",
			"+mediawiki.special.userlogin.signup.styles": "resources/skinStyles/mediawiki.special.userlogin.signup.styles.css"
		}
	},
	"manifest_version": 2
}